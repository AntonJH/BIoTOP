<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activitybackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/txv_farm"
        android:textColor="@color/black_alpha"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/moisture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:padding="5dip"
            android:text="@string/txv_moisture"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/moistureShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:padding="5dip"
            android:text="@string/txv_moisture_show"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:padding="5dip"
            android:text="@string/txv_temperature"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/temperatureShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:padding="5dip"
            android:text="@string/txv_temperature_show"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/wateringTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/txv_watering_title"
        android:textColor="@color/blue_text"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/wateringOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:padding="5dip"
            android:text="@string/txv_watering_option"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/autoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip">

        <TextView
            android:id="@+id/wateringStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:padding="5dip"
            android:text="@string/txv_watering_status"
            android:textColor="@color/black_alpha"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wateringStatusShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="5dip"
            android:text="@string/txv_watering_status_show_off"
            android:textColor="@color/title_bar_color"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/waterButton"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:text="@string/txv_watering_button_show_off" />

</LinearLayout>